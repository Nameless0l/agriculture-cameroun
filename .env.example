# ================================
# CONFIGURATION OBLIGATOIRE
# ================================

# Clé API Google Gemini (OBLIGATOIRE)
# Obtenez votre clé sur: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# CONFIGURATION RÉGIONALE
# ================================

# Région par défaut au Cameroun
# Options: Centre, Littoral, Ouest, Sud, Est, Nord, Adamaoua, Extrême-Nord, Nord-Ouest, Sud-Ouest
DEFAULT_REGION=Centre

# Langue par défaut
# Options: fr (français), en (anglais)
DEFAULT_LANGUAGE=fr

# ================================
# CONFIGURATION DES MODÈLES IA
# ================================

# Modèle pour l'agent principal coordinateur
ROOT_AGENT_MODEL=gemini-2.0-flash-001

# Modèles pour les agents spécialisés
WEATHER_AGENT_MODEL=gemini-2.0-flash-001
CROPS_AGENT_MODEL=gemini-2.0-flash-001
HEALTH_AGENT_MODEL=gemini-2.0-flash-001
ECONOMIC_AGENT_MODEL=gemini-2.0-flash-001
RESOURCES_AGENT_MODEL=gemini-2.0-flash-001

# ================================
# CONFIGURATION DÉVELOPPEMENT
# ================================

# Mode debug pour plus de détails (true/false)
DEBUG=false

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Port pour le serveur web local
PORT=8080

# Hôte d'écoute (localhost pour local, 0.0.0.0 pour réseau)
HOST=localhost

# ================================
# API EXTERNES (OPTIONNEL)
# ================================

# Clé API OpenWeatherMap pour données météo temps réel
# Obtenez votre clé sur: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# Clé API pour données de marché (si disponible)
MARKET_API_KEY=your_market_api_key

# ================================
# CONFIGURATION BASE DE DONNÉES (OPTIONNEL)
# ================================

# URL de base de données pour stockage persistant
# Exemple: sqlite:///agriculture.db ou postgresql://user:password@localhost/agriculture
DATABASE_URL=sqlite:///agriculture.db

# ================================
# CONFIGURATION CACHE (OPTIONNEL)
# ================================

# URL Redis pour cache (si disponible)
# Exemple: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Durée de cache en secondes
CACHE_TTL=3600

# ================================
# CONFIGURATION SÉCURITÉ
# ================================

# Clé secrète pour sessions (générer une clé aléatoire forte)
SECRET_KEY=your_secret_key_here

# Activer HTTPS en production (true/false)
ENABLE_HTTPS=false

# ================================
# CONFIGURATION MONITORING (OPTIONNEL)
# ================================

# Activer les métriques de performance
ENABLE_METRICS=false

# URL pour envoyer les métriques
METRICS_URL=http://localhost:9090

# ================================
# CONFIGURATION EMAIL (OPTIONNEL)
# ================================

# Configuration SMTP pour notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=wwwmbassiloic@gmail.com
SMTP_PASSWORD=yoyoyoyo
SMTP_USE_TLS=true

